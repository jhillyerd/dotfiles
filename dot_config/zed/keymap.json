// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace || Dock",
    "bindings": {
      "alt-h": "workspace::ActivatePaneLeft",
      "alt-j": "workspace::ActivatePaneDown",
      "alt-k": "workspace::ActivatePaneUp",
      "alt-l": "workspace::ActivatePaneRight",
      "alt-o": "workspace::CloseAllDocks",
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
    },
  },
  {
    "context": "Editor && vim_mode == insert && (edit_prediction || edit_prediction_conflict)",
    "bindings": {
      "right": "editor::AcceptEditPrediction",
    },
  },
  {
    "context": "Editor && vim_mode == normal && !showing_code_actions",
    "bindings": {
      "up": "editor::GoToPreviousDiagnostic",
      "down": "editor::GoToDiagnostic",
      "space b": "tab_switcher::ToggleAll",
      "space d": "diagnostics::Deploy",
      "space g g": ["task::Spawn", { "task_name": "Open lazygit" }],
      ", c c": "editor::RunFlycheck",
      ", q": "editor::Format",
      ", t t": "editor::SpawnNearestTask",
    },
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      ", q": "editor::FormatSelections",
    },
  },
  {
    "context": "Editor && multibuffer && vim_mode == normal && !menu",
    "bindings": {
      "enter": "editor::OpenExcerpts",
    },
  },
]
